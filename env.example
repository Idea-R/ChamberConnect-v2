# ChamberConnect Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# App Environment (development, staging, production)
NODE_ENV=development
EXPO_PUBLIC_ENVIRONMENT=development

# App Configuration
EXPO_PUBLIC_APP_NAME=ChamberConnect
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUNDLE_ID=com.chamberconnect.app

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project Settings
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
EXPO_PUBLIC_SUPABASE_SERVICE_KEY=your-service-key-here

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Primary API Base URL
EXPO_PUBLIC_API_BASE_URL=https://api.chamberconnect.com
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_API_RETRY_ATTEMPTS=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
EXPO_PUBLIC_JWT_SECRET=your-jwt-secret-here
EXPO_PUBLIC_JWT_EXPIRES_IN=24h

# OAuth Providers
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
EXPO_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Error Tracking
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Analytics
EXPO_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# AI & MACHINE LEARNING
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_ENABLE_REAL_TIME_MESSAGING=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true 